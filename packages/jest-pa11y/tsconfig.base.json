{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "allowUnreachableCode": true,
    "baseUrl": "./src",
    "declaration": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build",
    "pretty": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "target": "es6"
  }
}
